<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Чат с Puter AI</title>
    <style>
        body {
            background: #f7f7f7;
            color: #222;
            transition: background 0.2s, color 0.2s;
        }
        .dark {
            background: #181b20;
            color: #f2f3f7;
        }
        #response {
            margin-top:20px; 
            border:1px solid #ccc; 
            padding:10px; 
            width:320px; 
            min-height:50px;
            background:inherit;
            color:inherit;
        }
        input, button {
            font-size: 1rem;
        }
        .dark #response {
            border-color: #333;
            background: #22252a;
            color: #f2f3f7;
        }
        .dark input, .dark button {
            background: #252830;
            color: #f2f3f7;
            border: 1px solid #444;
        }
    </style>
</head>
<body>
    <script src="https://js.puter.com/v2/"></script>
    <button onclick="toggleTheme()" id="themeBtn">Темная тема</button>
    <h3>Чат с Puter AI</h3>
    <input type="text" id="userInput" placeholder="Введите ваш вопрос..." style="width: 300px;">
    <button onclick="askAI()">Отправить</button>

    <div id="response"></div>

    <script>
        async function askAI() {
            const input = document.getElementById('userInput').value;
            document.getElementById('response').innerText = 'Ожидание ответа...';
            try {
                const answer = await puter.ai.chat(input);
                document.getElementById('response').innerText = answer;
            } catch (err) {
                document.getElementById('response').innerText = 'Ошибка: ' + err;
            }
        }

        function toggleTheme() {
            document.body.classList.toggle('dark');
            const isDark = document.body.classList.contains('dark');
            document.getElementById('themeBtn').innerText = isDark ? "Светлая тема" : "Темная тема";
        }
    </script>
</body>
</html>
